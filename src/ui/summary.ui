    border: 2px solid #fb7185;
}


/* Labels */
QLabel {
    color: #374151;
    font-size: 13px;
}

/* Input Fields (QTextEdit is like a multi-line QLineEdit) */
QTextEdit[readOnly=&quot;true&quot;], QListWidget {
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 13px;
    background: white;
    color: #374151; /* Darker text */
}

QTextEdit[readOnly=&quot;true&quot;]:focus, QListWidget:focus {
    border-color: #6366f1; /* Consistent focus color */
    outline: none;
}

QTextEdit[readOnly=&quot;true&quot;] {
    background: #f9fafb; /* Slightly off-white for read-only */
    color: #6b7280; /* Greyer text for read-only */
}

/* List Widgets */
QListWidget {
    alternate-background-color: #f9fafb;
    selection-background-color: #6366f1;
    selection-color: white;
}

QListWidget::item {
    padding: 8px;
    border-bottom: 1px solid #f3f4f6;
}

QListWidget::item:hover {
    background: #f3f4f6;
}

QListWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #6366f1, stop:1 #4f46e5);
}

/* Buttons */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #6366f1, stop:1 #4f46e5); /* Main button gradient */
    color: white;
    border: none;
    border-radius: 8px;
    padding: 8px 16px;
    font-weight: bold;
    font-size: 12px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #5855eb, stop:1 #4338ca);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #4338ca, stop:1 #3730a3);
}

QPushButton:disabled {
    background: #9ca3af;
    color: #6b7280;
}

/* Specific button styles */
QPushButton#btnViewFullCV {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #10b981, stop:1 #059669); /* Green for View Full CV */
}
QPushButton#btnViewFullCV:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #059669, stop:1 #047857);
}

QPushButton#btnClose {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ef4444, stop:1 #dc2626); /* Red for Close */
}
QPushButton#btnClose:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #dc2626, stop:1 #b91c1c);
}

/* Scrollbar Styling - Re-used from MainWindow */
QScrollBar:vertical {
    border: 1px solid #d0d0d0;
    background: #f5f5f5;
    width: 10px;
    margin: 0px 0px 0px 0px;
    border-radius: 5px;
}

QScrollBar::handle:vertical {
    background: #a0a0a0;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollArea {
    border: none;
    background-color: transparent;
}

QScrollArea &gt; QWidget {
    background-color: transparent;
}
