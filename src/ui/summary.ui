/* Main Window Styling - Adapted for QDialog */
QDialog {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #f8fafc, stop:1 #e2e8f0);
    font-family: 'Segoe UI', sans-serif;
}

/* Header Labels (like Applicant Name) */
QLabel#lblApplicantName {
    background: transparent; /* No specific gradient for the label itself */
    color: #2c3e50; /* Dark blue-grey for name */
    font-weight: bold;
    font-size: 20px;
    padding: 0; /* Remove padding from previous style if any */
}

QLabel#lblProfilePicture { /* New QLabel for image */
    border-radius: 40px; /* Makes it round (half of width/height 80px) */
    border: 2px solid #a0a0a0; /* Subtle border */
    background-color: #e0e0e0; /* Placeholder background */
}

/* Group Box Styling */
QGroupBox {
    font-weight: bold;
    font-size: 14px;
    color: #374151;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    margin-top: 10px;
    padding-top: 15px;
    background: white;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 5px 15px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #4f46e5, stop:1 #7c3aed); /* Purple gradient */
    color: white;
    border-radius: 8px;
    font-size: 13px;
}

/* Specific Group Box Styles (similar to MainWindow) */
QGroupBox#groupPersonal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #eff6ff, stop:1 #dbeafe); /* Blue tint for Personal */
    border: 2px solid #60a5fa;
}

QGroupBox#groupSummary {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #fef7ff, stop:1 #f3e8ff); /* Purple tint for Summary */
    border: 2px solid #c084fc;
}

QGroupBox#groupSkills {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #f0fdf4, stop:1 #dcfce7); /* Green tint for Skills */
