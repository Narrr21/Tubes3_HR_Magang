/* Base Dialog Styling - Matches MainWindow and SummaryWindow */
QDialog {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #f8fafc, stop:1 #e2e8f0);
    font-family: 'Segoe UI', sans-serif;
}

/* Header Labels */
QLabel#lblCVTitle {
    color: #374151; /* Dark grey */
    font-weight: bold;
    font-size: 16px; /* Slightly smaller than main title but prominent */
    padding: 5px;
}

QLabel#lblFileName {
    color: #6b7280; /* Greyish text for file info */
    font-size: 13px;
    font-style: italic;
    padding: 5px;
}

/* Toolbar Frame Styling */
QFrame#toolbar {
    background: #ffffff; /* White background for toolbar */
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    margin: 5px; /* Adjust margin to give it space */
    padding: 5px;
}

/* General Button Styling (from MainWindow) */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #6366f1, stop:1 #4f46e5); /* Main button gradient */
    color: white;
    border: none;
    border-radius: 8px;
    padding: 8px 16px;
    font-weight: bold;
    font-size: 12px;
    min-width: 80px; /* Ensure a minimum width for all buttons */
    min-height: 30px; /* Ensure a minimum height for all buttons */
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #5855eb, stop:1 #4338ca);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #4338ca, stop:1 #3730a3);
}

QPushButton:disabled {
    background: #9ca3af;
    color: #6b7280;
}

/* Specific Toolbar Button Styling */
QPushButton#btnZoomIn, QPushButton#btnZoomOut {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #06b6d4, stop:1 #0891b2); /* Cyan gradient */
    min-width: 60px; /* Smaller width for zoom buttons */
}
QPushButton#btnZoomIn:hover, QPushButton#btnZoomOut:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #0891b2, stop:1 #0e7490);
}

QPushButton#btnSaveAs {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #f97316, stop:1 #ea580c); /* Orange gradient for Save As */
}
QPushButton#btnSaveAs:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ea580c, stop:1 #c2410c);
}

/* Main Content TextEdit */
QTextEdit {
    border: 2px solid #e5e7eb;
    border-radius: 12px; /* Consistent rounded corners */
    padding: 15px; /* More padding for content */
    background: white;
    font-size: 13px; /* Match general text size */
    color: #374151; /* Dark grey text */
}

QTextEdit:read-only {
    background: #f9fafb; /* Slightly off-white for read-only */
    color: #6b7280; /* Greyer text for read-only */
}

/* Bottom Action Buttons */
QPushButton#btnViewSummary {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #8b5cf6, stop:1 #7c3aed); /* Purple similar to Upload */
}
QPushButton#btnViewSummary:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #7c3aed, stop:1 #6d28d9);
}

QPushButton#btnAnalyzeSkills {
